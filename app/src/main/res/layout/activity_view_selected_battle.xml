<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewSelectedBattleActivity">

    <Button
        android:id="@+id/delete_battle_button"
        android:layout_width="106dp"
        android:layout_height="66dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:text="Delete"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_battle_competitors"
        app:layout_constraintVertical_bias="0.249" />

    <Button
        android:id="@+id/start_judge_button"
        android:layout_width="106dp"
        android:layout_height="66dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Judge"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/delete_battle_button"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_battle_competitors"
        app:layout_constraintVertical_bias="0.249" />

    <TextView
        android:id="@+id/selected_battle_name"
        android:layout_width="227dp"
        android:layout_height="122dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="259dp"
        android:text="TextView"

        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selected_battle_judge"
        android:layout_width="115dp"
        android:layout_height="59dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="108dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_battle_name" />

    <TextView
        android:id="@+id/selected_battle_competitors"
        android:layout_width="99dp"
        android:layout_height="57dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="84dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_battle_judge"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="118dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:text="Judges #"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/selected_battle_judge"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_battle_name" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="159dp"
        android:layout_height="63dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="48dp"
        android:text="Competitors #"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/selected_battle_competitors"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.028" />
</androidx.constraintlayout.widget.ConstraintLayout>